<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/base"
    tools:context="com.example.vinilos.ui.main.view.DetailProjectActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.VinylsApplication.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/ButtonColor"
            app:popupTheme="@style/Theme.VinylsApplication.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintWidth_percent="90">


            <ImageView
                android:id="@+id/imageViewInterviewDetails"
                android:layout_width="0dp"
                android:layout_height="280dp"
                android:layout_marginTop="12dp"
                android:contentDescription="@string/detail_album_description_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.104"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textLabelCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Company Name"
                android:textColor="@color/turquoise"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewInterviewDetails" />

            <TextView
                android:id="@+id/textContentCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:textColor="@color/TextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/textLabelCompanyName"
                app:layout_constraintStart_toEndOf="@+id/textLabelCompanyName"
                tools:text="Company Name" />


            <TextView
                android:id="@+id/textLabelCandidateName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Candidate Name"
                android:textColor="@color/turquoise"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLabelCompanyName" />

            <TextView
                android:id="@+id/textContentCandidateName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/TextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/textLabelCandidateName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textLabelCandidateName"
                tools:text="Candidate Name" />

            <TextView
                android:id="@+id/textLabelCandidateLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Candidate Last Name"
                android:textColor="@color/turquoise"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLabelCandidateName" />

            <TextView
                android:id="@+id/textContentCandidateLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/TextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/textLabelCandidateLastName"
                app:layout_constraintStart_toEndOf="@+id/textLabelCandidateLastName"
                tools:text="Last Name" />

            <TextView
                android:id="@+id/textLabelRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Candidate Rol"
                android:textColor="@color/turquoise"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLabelCandidateLastName" />


            <TextView
                android:id="@+id/textContentRol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/TextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/textLabelRol"
                app:layout_constraintStart_toEndOf="@+id/textLabelRol"
                tools:text="Candidate Rol" />



            <TextView
                android:id="@+id/textLabelDateInterview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="32dp"
                android:text="Interview Date"
                android:textColor="@color/turquoise"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textLabelRol" />


            <TextView
                android:id="@+id/textContentInterviewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textColor="@color/TextColor"
                app:layout_constraintBaseline_toBaselineOf="@+id/textLabelDateInterview"
                app:layout_constraintStart_toEndOf="@+id/textLabelDateInterview"
                tools:text="Interview Date" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>